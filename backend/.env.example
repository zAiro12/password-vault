# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration (MySQL 8.0+)
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=
DB_NAME=password_vault
DB_CONNECTION_LIMIT=10

# Initial Admin User Configuration (used during first migration)
# ⚠️ IMPORTANT: Change this password immediately after first login!
ADMIN_DEFAULT_USERNAME=admin
ADMIN_DEFAULT_PASSWORD=change-me-immediately
ADMIN_DEFAULT_EMAIL=admin@passwordvault.local

# JWT Configuration (for authentication)
JWT_SECRET=your-secret-key-here-change-in-production
JWT_EXPIRES_IN=24h

# Encryption Configuration (AES-256-CBC for credentials)
# Generate a secure 32-byte (64 hex chars) key with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=your-256-bit-encryption-key-here-must-be-64-hex-chars-change-this

# Security Configuration
BCRYPT_ROUNDS=10

# CORS Configuration (comma-separated origins)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
